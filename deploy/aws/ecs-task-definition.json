{
  "family": "helpdesk-platform",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::${AWS::AccountId}:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::${AWS::AccountId}:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "django-app",
      "image": "${AWS::AccountId}.dkr.ecr.${AWS::Region}.amazonaws.com/helpdesk-django:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DJANGO_SETTINGS_MODULE",
          "value": "config.settings.production"
        },
        {
          "name": "DATABASE_URL",
          "value": "postgresql://admin:${DB_PASSWORD}@${AURORA_ENDPOINT}:5432/helpdesk"
        },
        {
          "name": "REDIS_URL",
          "value": "redis://${REDIS_ENDPOINT}:6379"
        },
        {
          "name": "AWS_S3_BUCKET",
          "value": "${S3_BUCKET_NAME}"
        },
        {
          "name": "ALLOWED_HOSTS",
          "value": "${DOMAIN_NAME},*.${DOMAIN_NAME}"
        },
        {
          "name": "CORS_ALLOWED_ORIGINS",
          "value": "https://${DOMAIN_NAME}"
        },
        {
          "name": "SECURE_SSL_REDIRECT",
          "value": "True"
        },
        {
          "name": "SECURE_HSTS_SECONDS",
          "value": "31536000"
        },
        {
          "name": "SESSION_COOKIE_SECURE",
          "value": "True"
        },
        {
          "name": "SESSION_COOKIE_HTTPONLY",
          "value": "True"
        },
        {
          "name": "SESSION_COOKIE_SAMESITE",
          "value": "Strict"
        },
        {
          "name": "CSRF_COOKIE_SECURE",
          "value": "True"
        },
        {
          "name": "CSRF_COOKIE_HTTPONLY",
          "value": "True"
        },
        {
          "name": "CSRF_COOKIE_SAMESITE",
          "value": "Strict"
        },
        {
          "name": "CONN_MAX_AGE",
          "value": "600"
        },
        {
          "name": "FILE_UPLOAD_MAX_MEMORY_SIZE",
          "value": "10485760"
        },
        {
          "name": "DATA_UPLOAD_MAX_MEMORY_SIZE",
          "value": "10485760"
        }
      ],
      "secrets": [
        {
          "name": "SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:${AWS::Region}:${AWS::AccountId}:secret:helpdesk/secret-key"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:${AWS::Region}:${AWS::AccountId}:secret:helpdesk/db-password"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/helpdesk-platform",
          "awslogs-region": "${AWS::Region}",
          "awslogs-stream-prefix": "django"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health/ || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
