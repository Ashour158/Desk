# Production Environment Configuration
# Copy this file to .env for production deployment

# Django Settings
SECRET_KEY=your-production-secret-key-change-this
DEBUG=False
ALLOWED_HOSTS=helpdesk-platform.com,api.helpdesk-platform.com,admin.helpdesk-platform.com
DJANGO_SETTINGS_MODULE=config.settings.production

# Database Configuration
DB_HOST=db
DB_NAME=helpdesk_production
DB_USER=helpdesk_user
DB_PASSWORD=your-secure-database-password
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Email Configuration
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@helpdesk-platform.com

# AI Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# External Services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
SENDGRID_API_KEY=your-sendgrid-api-key

# AWS Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=helpdesk-platform-production
AWS_REGION=us-east-1

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# CORS Settings
CORS_ALLOWED_ORIGINS=https://helpdesk-platform.com,https://admin.helpdesk-platform.com
CORS_ALLOW_CREDENTIALS=True

# File Upload Settings
FILE_UPLOAD_MAX_SIZE=10485760
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/django.log

# Monitoring
SENTRY_DSN=your-sentry-dsn
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_URL=/health/

# Feature Flags
AI_ML_FEATURES=True
ADVANCED_ANALYTICS=True
REAL_TIME_NOTIFICATIONS=True
MOBILE_APP=True
IOT_INTEGRATION=True
ADVANCED_SECURITY=True
WORKFLOW_AUTOMATION=True
CUSTOMER_EXPERIENCE=True
INTEGRATION_PLATFORM=True
ADVANCED_COMMUNICATION=True
